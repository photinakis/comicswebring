<form class="form" name="signup" method="POST" data-netlify="true" netlify-honeypot="bot">
    <p class="form__field">
        <label for="input-name" class="form__label">Site Name:</label>
        <input type="text" name="name" id="input-name" class="form__input" placeholder="Your comics portfolio site" required />
    </p>
    <p class="form__field">
        <label for="input-url" class="form__label">Site URL:</label>
        <input type="url" name="url" id="input-url" class="form__input" placeholder="https://www.myamazingcomics.org" required />
    </p>

    <p class="form__field">
        <label for="input-email" class="form__label">Contact email (will not be published):</label>
        <input type="email" name="email" id="input-email" class="form__input" placeholder="youcanemailme@myamazingcomics.org" required />
    </p>

    <div class="sr-only" style="visibility:hidden" aria-hidden="true">
        <label for="input-bot">Donâ€™t fill this out if you're human:</label>
        <input type="text" name="bot" id="input-bot" />
    </div>
    <div class="u-align-right">
        <button type="submit" class="btn btn--primary">Please Add Me!</button>
    </div>
</form>